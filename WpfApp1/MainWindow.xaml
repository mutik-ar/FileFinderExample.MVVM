<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="CheckBox1" Content="Visible" HorizontalAlignment="Left" Margin="62,39,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox1_Unchecked"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,100,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Visibility="{Binding Visibility1, UpdateSourceTrigger=PropertyChanged }"/>

    </Grid>
</Window>
